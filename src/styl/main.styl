$primary = #00FF90
$black = #0B0B0B
$secondary = #7F39FB
body
  font-family Arial
.header
  background $black
  position fixed
  color #fff
  top 0
  right 0
  left 0
  text-align center
  border 4px solid $secondary
  transform translateY(-100%)
  transition .2s ease-in-out
  &.show
    transform translateY(0)
.hide
    display none !important
.video-container
  border 2px solid $secondary
  margin 0 auto
  max-width 900px
  display flex
  align-items center
  justify-content center
  background $black
.card-grid
    display flex
    align-items center
    justify-content center
.card
  flex 1
  height 300px
  border 4px solid $black
  overflow hidden
  padding 1em
  margin 1em
  .confidence
    font-weight bold
    font-size 1.3em
  .title
    color $secondary
.button
  color $black
  background transparent
  font-weight bold
  border 1px solid $black
  padding .3em 1em
  box-shadow inset -1px -2px 3px rgba(0,0,0,.7)
  margin .5em
  cursor pointer
  border-radius 4px
  &.secondary
    background-color $secondary
  &.big
    font-size 1.3em
  &:hover
  &:focus
    background $primary
  &:active
    border-width 1px
    box-shadow inset 1px 2px 3px rgba(0,0,0,.7)

.grid-buttons
  display flex
  align-items center
  justify-content center

.loading
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    border 4px solid $black
    background rgba(0,0,0,.7)
    display flex 
    align-items center
    justify-content center
    color $primary
    overflow hidden
    margin 0
    font-size 1.9em
    .title
        background $black
        padding .8em 1.3em